<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configuration>
<Configuration status="INFO" name="CHPLTests" packages="">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>%p %C %m%n</Pattern>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="net.sf.ehcache" level="INFO" additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>
        <Logger name="org.hibernate" level="WARN" additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>
        <!-- Logging for hibernate stuff. Leave off generally -->
        <!--<Logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>-->
        <Logger name="org.dbunit" level="WARN" additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>
        <Logger name="org.springframework.cache" level="INFO"
            additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>
        <Root level="INFO">
            <AppenderRef ref="STDOUT" />
        </Root>
    </Loggers>
</Configuration>
